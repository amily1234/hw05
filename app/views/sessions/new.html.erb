<div class="mt-3 d-flex align-items-center justify-content-center">
  <h2><%= t('login_template') %></h2>
</div>
<div class="container">
	<%= form_with model: @user, url: sign_in_path do |form| %>

		<div class="mb-3">
			<%= form.label :email, I18n.t(:email_account_template) %>
			<%= form.text_field :email, class: "form-control", placeholder: "steve@gmail.com" %>
		</div>
		<div class="mb-3">
			<%= form.label :password_field, I18n.t(:password_template) %>
			<%= form.password_field :password, class: "form-control", placeholder: "password" %>
		</div>
		<div class="mb-3">
			<%= form.submit I18n.t(:login_template), class:'btn btn-primary' %>
		</div>

	<% end %> 
</div>