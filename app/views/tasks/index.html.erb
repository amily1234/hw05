<h1><%= t('tasks_template') %></h1>

<%= link_to I18n.t(:new_template), new_task_path %>

<table>
  <thead>
    <tr>
      <td><%= t('tasks_title_template') %></td>
      <td><%= t('tasks_content_template') %></td>
      <td><%= t('task_create_at_template') %></td>
      <td><%= t('action_template') %></td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.created_at.strftime("%Y/%m/%d %I:%M %p") %></td>
      <td>
        <%= link_to I18n.t(:edit_template), edit_task_path(task) %>
        <%= link_to I18n.t(:delete_template), task_path(task), method: :delete, data: { confirm: I18n.t(:sure_to_delete_template) } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>