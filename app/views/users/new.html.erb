<div class="container">
    <div class="mt-3 d-flex align-items-center justify-content-center">
    <h2><%= t('user_sample_template') %></h2>
    </div>
    <%= form_with model: @user, url: sign_up_path do |form| %>
        <% if @user.errors.any? %>
            <div class="alert alert-danger">
                <% @user.errors.full_messages.each do |messages| %>
                    <div><%= messages %></div>
                <% end %>
            </div>
        <% end %>
        <div class="mb-3">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control", placeholder: "steve@gmail.com" %>
        </div>
        <div class="mb-3">
            <%= form.label :password_field %>
            <%= form.password_field :password, class: "form-control", placeholder: "password" %>
        </div>
        <div class="mb-3">
            <%= form.label :password_field %>
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password_confirmation" %>
        </div>
        <div class="mb-3">
            <%= form.label :role_id, I18n.t(:task_priority_template) %>
            <%= form.select(:role_id, options_for_select([['Dev', 1],['Admin', 2]]), prompt: "請選擇角色") %> <br />
        </div>
        <div class="mb-3">
            <%= form.submit I18n.t(:user_sample_template), class:'btn btn-primary' %>
        </div>
    <% end %>
</div>